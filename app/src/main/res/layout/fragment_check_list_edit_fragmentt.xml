<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_star_notes_detail"
    tools:context=".presentation.ui.checklist.CheckListEditFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="66dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/btn_back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="start|top"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/btn_delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="546dp"
        android:layout_gravity="center"
        android:background="@drawable/img_star_checklist_edit"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/text_border"
            android:paddingStart="10dp"
            app:prefixText="Name: "
            app:prefixTextColor="#ABA9AB">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:paddingStart="60dp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#330200"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Goals: "
                    android:textColor="#9E9E9E"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:checked="false" />

                    <EditText
                        android:id="@+id/et_1"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#00000000"
                        android:gravity="center_vertical"
                        android:paddingStart="60dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:prefixTextColor="#ABA9AB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:checked="false" />


                    <EditText
                        android:id="@+id/et_2"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#00000000"
                        android:gravity="center_vertical"
                        android:paddingStart="60dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:prefixTextColor="#ABA9AB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:checked="false" />


                    <EditText
                        android:id="@+id/et_3"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#00000000"
                        android:gravity="center_vertical"
                        android:paddingStart="60dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:prefixTextColor="#ABA9AB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/checkBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:checked="false" />

                    <EditText
                        android:id="@+id/et_4"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#00000000"
                        android:gravity="center_vertical"
                        android:paddingStart="60dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:prefixTextColor="#ABA9AB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <CheckBox
                        android:id="@+id/checkBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:checked="false" />

                    <EditText
                        android:id="@+id/et_5"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="#00000000"
                        android:gravity="center_vertical"
                        android:paddingStart="60dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:prefixTextColor="#ABA9AB" />

                </LinearLayout>

                <ImageView
                    android:layout_width="204dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/btn_add_goal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="142dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/btn_save" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="142dp"
            android:layout_height="52dp"
            android:src="@drawable/btn_cancel" />

    </LinearLayout>

</FrameLayout>