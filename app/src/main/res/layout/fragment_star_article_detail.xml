<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_star_notes_detail"
    tools:context=".presentation.ui.stararticle.StarArticleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/btn_back" />

        <FrameLayout
            android:id="@+id/img_header"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:paddingHorizontal="15dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="60dp"
            android:contentDescription="@string/article_cover_content_description"
            android:scaleType="centerInside"
            android:background="@drawable/title_article_bg">

            <TextView
                android:id="@+id/articleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article title"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textAllCaps="true"
                android:fontFamily="@font/poppins_extrabold"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Этот LinearLayout уже не требует прокрутки -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/round_item1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="151dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_article"
                app:shapeAppearanceOverlay="@style/Rounded12Shape" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#330200"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp">

                <!-- Текст внутри этого ScrollView -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="There is a moment each evening when the city begins to glow with the light of thousands of stars, both above and around you. Neon reflections ripple on wet streets, music drifts from rooftop bars, and every building seems to hum with hidden stories. This is the true pulse of the night, and Starkino invites you to capture it. Every coordinate you save becomes a portal to memory, a digital echo of where you once stood. [...]"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </ScrollView>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
